<% provide(:title, 'All Locations') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if current_center.admin? %>
			   <h1><%= @center.name %></h1>
			<% end %>
			<h1 class="half_size">Select Location</h1>
			<ul class="objects">
			<%= will_paginate %>
			  <% @locations.each do |location| %>
			    <li>
					<h4><%= location.name %></h4>
						<%= link_to "Update", controller: "locations", action: "edit", id: location.id %> |
						<%= link_to "Delete", location_path(location.id), method: :delete, data: {confirm: "Are you sure?"} %><br>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
