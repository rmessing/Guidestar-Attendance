<% provide(:title, 'All Locations') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if current_center.admin? %>
			   <h1><%= @center.name %></h1>
			<% end %>
			<h1 class="half_size">Select Location</h1>
			<ul class="objects">
			<%= will_paginate %>
			  <% @locations.each do |location| %>
			    <li>
					<a href="<%= edit_location_path(location.id) %>">
					<h4><%= location.name %></h4>
					</a>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
