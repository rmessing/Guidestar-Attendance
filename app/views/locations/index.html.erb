<% provide(:title, 'All Locations') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<% if current_center.admin? %>
				  <h1><%= @center.name %></h1>
				  <h1 class="half_size"> Locations </h1>
				  <% else %>
				  <h1> All Locations </h1>
			<% end %>

			<ul class="objects">
			<%= will_paginate %>
			  <% @locations.each do |location| %>
			    	<li>
					    <div class="center_name">
							<h4><%= location.name %></h4>
						</div>
						<div class="center_links">
							<%= link_to "View", location_path(location.id), method: :get %> |
							<%= link_to "Update", controller: "locations", action: "edit", id: location.id %> |
							<%= link_to "Delete", location_path(location.id), method: :delete, data: {confirm: "Are you sure?"} %><br>
						</div>
			    	</li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
