
<div class="row">
	 <div class="col-md-4 col-md-offset-4">
		<% if current_center.admin? %>
		  <h1 class="half_size"><%= @center.name %></h1>
		<% end %>

		<%= form_for(@group) do |f| %>
			<%= render 'shared/error_messages', object: @group %>
			<%= f.label :Class_Name %>
			<%= f.text_field :name, class: 'form-control' %>
			<%= f.hidden_field :center_id, :value => @center.id %>
			<%= f.label :Location %>
			<%= f.collection_select :location_id, @locations, :id, :name, prompt: true %>
			<%= f.label :Teacher %>
			<%= f.collection_select :teacher_id, @teachers, :id, :teacher_full_name, prompt: true %>
			<%= f.submit yield(:button_text), class: "btn btn-primary"  %>
		<% end %>
	</div>
</div>

