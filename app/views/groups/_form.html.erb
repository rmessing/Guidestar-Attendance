<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@group) do |f| %>
		<%= render 'shared/error_messages', object: @group %>
		<%= f.label :Class_Name %>
		<%= f.text_field :name, class: 'form-control' %>
		<%	f.hidden_field :center_id, :value => current_center.id %>
		<%= f.label :Teacher %>
		<%= f.collection_select :teacher_id, @teachers, :id, :teacher_full_name, prompt: true%>
		<%= f.label :Location %>
		<%= f.collection_select :location_id, @locations, :id, :name, prompt: true %>
		<%= f.submit yield(:button_text), :class => 'f_submit'  %>
	<% end %>
  <div>
</div>