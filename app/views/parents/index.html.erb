<% provide(:title, 'All Parents') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if current_center.admin? %>
				 <h1> Parents </h1>
				 <h1 class="half_size"><%= @center.name %></h1> 
			<% else %>
				  <h1> All Parents </h1>
			<% end %>

			<ul class="objects">
			<%= will_paginate %>
			  <% @parents.each do |parent| %>
				    <li>
				    	<div class="center_name", id="push_right">
							<h4><%= parent.fname %>
								<%= parent.lname %></h4>
						</div>
						<div class="center_links">
								<%= link_to "View", parent_path(parent.id), method: :get %> |
								<%= link_to "Update", controller: "parents", action: "edit", id: parent.id %> |
								<%= link_to "Delete", parent_path(parent.id), method: :delete, data: {confirm: "Are you sure?"} %><br>
						</div>
				    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
