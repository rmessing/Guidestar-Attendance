<% provide(:title, 'All Parents') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if current_center.admin? %>
			   <h1><%= @center.name %></h1>
			<% end %>
			<h1 class="half_size">Select Adult</h1>
			<ul class="objects">
			<%= will_paginate %>
			  <% @parents.each do |parent| %>
			    <li>
					<h4><%= parent.fname %>
						<%= parent.lname %></h4>
						<%= link_to "Update", controller: "parents", action: "edit", id: parent.id %> |
						<%= link_to "Delete", parent_path(parent.id), method: :delete, data: {confirm: "Are you sure?"} %><br>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
