<% if current_center.admin? %>
  <h1 class="half_size"><%= @center.name %></h1>
<% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(@parent) do |f| %>
      <%= render 'shared/error_messages', object: @parent %>
        <%= f.label :first_name %>
        <%= f.text_field :fname, class: 'form-control' %>
        <%= f.label :last_name %>
        <%= f.text_field :lname, class: 'form-control' %>
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>  
        <% if !@center.nil %>  
          <%= f.hidden_field :center_id, :value => @center.id %>
        <% else %>
          <%= f.hidden_field :center_id, :value => current_center.id %>
        <% end %>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :password_confirmation, "Retype Password" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
