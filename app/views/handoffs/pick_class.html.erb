<% provide(:title, 'Class Attendance') %>
<% provide(:button_text, "List Students") %>

<div class="container">	
	<h1>Class Attendance</h1>
	<div>
		<%= form_tag do %>
			<%= label_tag "Select class" %>
			<%= grouped_collection_select :group, :group_id, @locations, :groups, :name, :id, :name, include_blank: true  %>
		 	<%= submit_tag yield(:button_text), class: "btn btn-primary" %>
		<% end %>
	</div>
 </div>
