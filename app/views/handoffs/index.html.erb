<% provide(:title, 'Report') %>

<% Time.zone = 'America/New_York' %>

<h1 class="well">Attendance Records</h1>
<% if current_center.admin? %>
	<h3><%= @center.name %></h3><hr>
<% end %>

<%#= form_tag handoffs_path, :method => 'get' do %>
	<%#= text_field_tag :search, params[:search], placeholder: "  Child first name", class: "fields" %>
	<%#= submit_tag "Search", class: "fields" %>
<%# end %>

<!-- <%#= link_to "Advanced Search", controller: "searches", action: "new", id: @center.id %><hr> -->

<%= form_for @search, html: {class: "pure-form"} do |s| %>

	<div class="fields">		
		<small><%= s.text_field :child_name, placeholder: " Child last name" %></small>
	</div>
	<div class="fields">	
		<small><%= s.text_field :adult_name, placeholder: " Adult last name" %></small>
	</div>
	<div class="fields">	
		<%= s.select :class_name, options_for_select(@groups), :include_blank => "Select class" %>
	</div>
 	<div class="fields">	
		<%= s.select :location_name, options_for_select(@locations), :include_blank => 'Select location' %>
	</div>
	<div class="fields">
		<%= s.label "End date" %>
		<small><%= s.date_field :date_to, :value => Time.now.strftime('%Y-%m-%d') %></small>
	</div>
	<div class="fields">	
		<%= s.label "Start date" %>
		<small><%= s.date_field :date_from, :value => 7.days.ago.to_date.strftime('%Y-%m-%d') %></small>
	</div>
	<div class="fields">
		<small><%= s.button(type: 'submit') do %>
		  <span class="glyphicon glyphicon-search"></span>	
		<% end %></small>
	</div>

<% end %>
<hr>

<%= render "report" %>

