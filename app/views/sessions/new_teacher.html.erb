<% provide(:title, "Adult Portal") %>

<div class="center jumbotron">
  <h1> Adult Portal </h1>
  <h2> staff log in </h2>
</div>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(:session, url: teacher_log_in_path) do |f| %>
      <%= f.label :staff_username %>
      <%= f.text_field :username, placeholder: "6+ characters", class: 'form-control' %>
      <%= f.label :staff_password %>
      <%= f.password_field :password, placeholder: "8+ characters", class: 'form-control' %>
      <%= link_to "Forgot password?", new_teachers_password_reset_path %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
