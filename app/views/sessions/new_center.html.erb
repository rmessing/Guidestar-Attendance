<% provide(:title, "Center Log in") %>

<div class="center jumbotron">
	<h1><%= "Welcome to Handoffs" %></h1>
	<h1>Center Log in</h1>
	<h2><strong> child care attendance </strong></h2>
	<h2> Guidestar Forms </h2>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: center_log_in_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to "Forgot password?", new_password_reset_path %>
	  
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>	