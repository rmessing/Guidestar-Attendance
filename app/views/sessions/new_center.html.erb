<% provide(:title, "Admin Log In") %>

<div class="center jumbotron">
	<h1><%= "Guidestar Attendance" %></h1>
	<h1>Center Log In</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: center_log_in_path) do |f| %>

      <%= f.label :admin_username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :admin_password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to "Forgot password?", new_centers_password_reset_path %>
	  
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>	