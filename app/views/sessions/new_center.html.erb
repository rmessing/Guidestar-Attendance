<% provide(:title, "Admin Login") %>

<div class="center jumbotron">
  <h1> Administrator Log In </h1>
</div>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(:session, url: center_log_in_path) do |f| %>
      <%= f.label :administrator_username %>
      <%= f.text_field :username, placeholder: "6+ characters", class: 'form-control' %>
      <%= f.label :administrator_password %>
      <%= f.password_field :password, placeholder: "8+ characters", class: 'form-control' %>
      <%= link_to "Forgot password?", new_centers_password_reset_path %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>	