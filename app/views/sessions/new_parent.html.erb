
<% provide(:title, "Parent Log In") %>

<div class="center jumbotron">
	<h1><%= "Welcome to #{@center.name}" %></h1>
	<h1>Please Sign In</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: parent_log_in_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to "Forgot password?", new_parents_password_reset_path %>

      <%= f.submit "Log In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>	