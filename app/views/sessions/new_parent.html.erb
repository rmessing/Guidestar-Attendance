
<% provide(:title, "Parent Log In") %>

<div class="center jumbotron">
	<h1><%= "#{@center.name}" %></h1>
	<h1 class="half_size">parent log in</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: parent_log_in_path) do |f| %>
      <%= f.label :parent_username %>
      <%= f.text_field :username, class: 'form-control' %>
      <%= f.label :parent_password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>	