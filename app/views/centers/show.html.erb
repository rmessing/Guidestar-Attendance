<% provide(:title, "Client Profile") %>

<div class="container">
	<div class="profile">
		<% if current_center.admin? %>
			<h1>Client Profile</h1>
		<% else %>
			<h1>Home Office Profile</h1>
		<% end %>	
		<span>NAME:</span>  <%= @center.name %><br><br>
		<span>DIRECTOR:</span>  <%= @center.dirfname %> <%= @center.dirlname %><br><br>
		<span>USERNAME:</span>  <%= @center.username %><br><br>
		<span>EMAIL:</span>  <%= @center.email %><br><br>

		<span>LOCATIONS:</span>
				<% if @center.locations.length != 0 %>	
			<% @center.locations.each do |location| %>
				<a href="<%= location_path(location.id) %>"><span><%= location.name %></span></a>
			<% end %>
		<% end %>

	</div>
</div>


