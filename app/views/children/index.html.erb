<% provide(:title, 'All Children') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3"> 
			<% if current_center.admin? %>
				  <h1><%= @center.name %></h1>
				  <h1 class="half_size"> Children </h1>
				  <% else %>
				  <h1> All Children </h1>
			<% end %>
			<ul class="objects">
			<%= will_paginate %>
			  <% @children.each do |child| %>
				    <li>
						<a href="<%= edit_child_path(child.id) %>">
						<h4><%= child.fname %>
							<%= child.mname %>
							<%= child.lname %></h4>
						</a>
						<%= link_to "Update/Delete", controller: "children", action: "edit", id: child.id %><br>
						<%= link_to "Activate/De-activate Adult", controller: "families", action: "show", id: child.id %><br>
				    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>

