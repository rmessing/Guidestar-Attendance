<% provide(:title, 'Register Child') %>
<h1>Child Registration</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@child) do |f| %>

    <%= render 'shared/error_messages' %>
    
      <%= f.label :first_name %>
      <%= f.text_field :fname, class: 'form-control' %>
      <%= f.label :middle_name %>
      <%= f.text_field :mname, class: 'form-control' %>
      <%= f.label :last_name %>
      <%= f.text_field :lname, class: 'form-control' %>
      <%  f.hidden_field :center_id, :value => current_center.id %>
      <%= f.label :select_class %>
	  <%= f.collection_select :group_id, Group.all, :id, :name, prompt: false, class: 'form-control' %>
	  <%= f.label :Birthday %>
	  <%= f.date_select :birth_date %>

      <%= f.submit "Register Center", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>