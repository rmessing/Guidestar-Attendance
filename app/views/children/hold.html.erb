<% provide(:title, 'All Children') %>

<div class="container">
	<% if current_center.admin? %>
		  <h1> Children </h1>
		  <h1 class="half_size"><%= @center.name %></h1>
	<% else %>
		  <h1> All Children </h1>
	<% end %>
	<% if @children.length == 0 %>
		<h2><i>(There are no registered children.)</i></h2>
	<% end %>
	<%= will_paginate %>
	<br>
	<div class="table-responsive">
		<table class="table table-condensed">
			<thead>
				<th>Test</th>
				<th>Test</th>
				<th>Test</th>
				
			</thead>
			<tbody>
			  	<% @children.each do |child| %>
			  		<tr>
					    <td>
						    	<%= link_to edit_child_path(child.id), method: :get do %>
				        			 	<i class="glyphicon glyphicon-pencil"></i>
				        		<% end %>
				        
				        		<%= link_to child_path(child.id), method: :delete, data: {confirm: "Are you sure?"} do %>
				        			 	<i class="glyphicon glyphicon-trash"></i>
				        		<% end %>
				        </td>
				        
						<td>	<strong>
								<%= child.fname %>
								<%= child.mname %>
								<%= child.lname %>
								</strong>
						</td>
						
						<td>
								<%= link_to "View", child_path(child.id), method: :get %> |
								<%= link_to "Add/Remove Adult", controller: "families", action: "show", id: child.id %>
						</td>
					</tr>
			  	<% end %>
			 </tbody>	
		</table>
	</div>
</div>


