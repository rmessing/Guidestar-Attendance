<div class="row">
  <div class="col-md-6 col-md-offset-3">    
    <%= form_for(@child) do |f| %>
      <%= render 'shared/error_messages', object: @chile %>
		<%= f.label :child_first_name %>
		<%= f.text_field :fname, class: 'form-control' %>
		<%= f.label :child_middle_name %>
		<%= f.text_field :mname, class: 'form-control' %>
		<%= f.label :child_last_name %>
		<%= f.text_field :lname, class: 'form-control' %>
		<%  f.hidden_field :center_id, :value => current_center.id %>
		<%= f.label :Class_Select %>
		<%= f.collection_select :group_id, Group.all, :id, :name, include_blank: true %>
		<%= f.submit yield(:button_text), class: "btn btn-primary"%>
	<% end %>
  <div>
</div>