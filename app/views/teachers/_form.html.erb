<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% if current_center.admin? %>
      <h1 class="half_size"><%= @center.name %></h1>
    <% end %>


    <%= form_for(@teacher) do |f| %>
    <%= render 'shared/error_messages', object: @teacher %>
          <%= f.label :first_name %>
          <%= f.text_field :fname, class: 'form-control' %>
          <%= f.label :last_name %>
          <%= f.text_field :lname, class: 'form-control' %>
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: "6+ characters", class: 'form-control' %>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %> 
          <%= f.hidden_field :center_id, :value => @center.id %>
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: "8+ characters", class: 'form-control' %>
          <%= f.label :password_confirmation, "Retype Password" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div> 

