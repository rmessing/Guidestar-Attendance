<% provide(:title, 'All Teachers') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if current_center.admin? %>
			   <h1><%= @center.name %></h1>
			<% end %>
			<h1 class="half_size">Select Teacher</h1>
			<ul class="objects">
			<%= will_paginate %>
			  <% @teachers.each do |teacher| %>
			    <li>
					<h4><%= teacher.fname %>
						<%= teacher.lname %></h4>
						<%= link_to "Update", controller: "teachers", action: "edit", id: teacher.id %> |
						<%= link_to "Delete", teacher_path(teacher.id), method: :delete, data: {confirm: "Are you sure?"} %><br>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>


