<% provide(:title, 'Families') %>

<!-- When the Center Admin wants to add or remove a parent from a child's account, this code lists all the children for selection. -->

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3"> 
			<% if current_center.admin? %>
			  	<h1 class="half_size"><%= @center.name %></h1>
			<% end %>
			<h1>Select Child</h1>
			<ul class="objects">
			  <% @children.each do |child| %>
			    <li>
					<a href="<%= family_path(child.id) %>">
					<h4><%= child.fname %>
						<%= child.lname %></h4>
					</a>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
