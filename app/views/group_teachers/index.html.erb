<% provide(:title, 'Classes') %>

<!-- When assigning or removing a treacher to/from a class, the user first selects the class from this list.  A group is a class. -->

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3"> 
			<% if current_center.admin? %>
			  	<h1 class="half_size"><%= @center.name %></h1>
			<% end %>
			<h1>Select Class</h1>
			<ul class="objects">		
			  <% @groups.each do |group| %>
			  <div class="div_width3">
			    <li style="text-align: center">
					<a href="<%= group_teacher_path(group.id) %>">
					<h4><%= group.name %></h4>
					</a>
			    </li>
			    </div>
			  <% end %>
			</ul>
			
		</div>
	</div>
</div>
