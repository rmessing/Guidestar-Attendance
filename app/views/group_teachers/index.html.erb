<% provide(:title, 'Groups') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3"> 
			<% if current_center.admin? %>
			  	<h1 class="half_size"><%= @center.name %></h1>
			<% end %>
			<h1>Select Class</h1>
			<ul class="objects">
			  <% @groups.each do |group| %>
			    <li>
					<a href="<%= group_teachers_path(group.id) %>">
					<h4><%= group.name %></h4>
					</a>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>
